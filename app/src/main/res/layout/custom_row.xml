<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/LinearLayout032"
    android:descendantFocusability="blocksDescendants"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvField1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Nombre"
        android:textSize="16sp"
        android:layout_weight="0.00"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apellido"
        android:id="@+id/tvField2"
        android:textSize="16sp"
        android:layout_below="@+id/tvField1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btnRemove"
        android:text="X"
        android:onClick="onClickBoton"
        android:background="#f40d0d"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false" />

    <Button
        android:layout_width="80dp"
        android:layout_height="40dip"
        android:text="Edit"
        android:id="@+id/btnEdit"
        android:layout_alignBottom="@+id/btnRemove"
        android:layout_toLeftOf="@+id/btnRemove" />


</RelativeLayout>